@model EmailSenderApp.Models.ViewModels.EditEmailViewModel

@{
    ViewBag.Title = Model.Heading;
}

<h2 class="mb-3">@Model.Heading</h2>

<div>
    @using (Html.BeginForm("SendEmail", "Home"))
    {

        <p class="alert alert-info mt-4 mb-2">
            Pola tytuł i odbiorca są <strong>wymagane</strong>
        </p>

        @Html.HiddenFor(x => x.EmailModel.Id)
        @Html.HiddenFor(x => x.EmailModel.UserId)

        <div class="form-group mb-1">
            @Html.LabelFor(x => x.EmailModel.From)
            @Html.TextBoxFor(x => x.EmailModel.From,
           new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="form-group mb-1">
            @Html.LabelFor(x => x.EmailModel.To)
            @Html.TextBoxFor(x => x.EmailModel.To,
           new { @class = "form-control", autofocus = "autofocus" })
        </div>

        <div class="form-group mb-2">
            @Html.LabelFor(x => x.EmailModel.Title)
            @Html.TextBoxFor(x => x.EmailModel.Title,
           new { @class = "form-control" })
        </div>

        <div class="form-group mb-2">
            @Html.TextAreaFor(x => x.EmailModel.Text,
           new { @class = "form-control", @rows = "12" })
        </div>

        <button class="btn btn-primary btn-lg mb-5" type="submit">
            Wyślij
        </button>
    }
</div>